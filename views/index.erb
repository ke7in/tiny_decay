<% if @message %><p><%= @message %></p><% end %>

<form role="form" method="post">
  <div class="form-group">
     <label for="url">Site</label>
     <input type="url" class="form-control" value="<%= escape_html(params[:url])%>" name="url" id="url" placeholder="http://www.example.com" />
  </div>
  <div class="form-group">
     <label for="expiry">Days of life</label>
    <input type="number" class="form-control" name="expiry" id="expiry" placeholder="3600 (seconds)" />
  </div>
  <button type="submit" class="btn btn-default">Create Decaying Link!</button>
</form>

